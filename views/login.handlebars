<div class="dashboard-page">
<div class="login-page">
  <form class="login-form">
    <div class="inputBox">
      <input type="text" id="email-login" name="email-login" required="required"/>
      <span>Email:</span>
    </div>
    <div class="inputBox">
      <input type="password" id="password-login" name="password-login" required="required"/>
      <span>Password:</span>
    </div>
    <div class="inputBoxBtn">
      <button type="submit">Login</button>
    </div>
  </form>

  <form class="signup-form">
    <div class="inputBox">
      <input type="text" id="username-signup" required="required"/>
      <span>Username:</span>
    </div>
    <div class="inputBox">
      <input type="text" id="email-signup" required="required"/>
      <span>Email:</span>
    </div>
    <div class="inputBox">
      <input type="password" id="password-signup" required="required"/>
      <span>Password:</span>
    </div>
    <div class="inputBoxBtn">
      <button type="submit">Signup</button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>
