<article class="edit-post">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <p>Title</p>
    <div>
      <input name="post-title" type="text" value="{{post.post_title}}" id="edit-post-input"/>
    </div>
    <div>
      <p>Post</p>
      <input name="post-body" type="text" value="{{post.post_body}}" id="edit-post-input"/>
    </div>
    <div>
      {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}}
        {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="inputBoxBtn">
      <button type="submit" class="edit-post-btn">Save Post</button>
    </div>
  </form>
  <div class="inputBoxBtn">
    <button type="submit" class="delete-post-btn">Delete Post</button>
  </div>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>